extends ../layout

block content
    if user.role == "admin"
      a#anchor(href="/api/genre/new",class="btn btn-warning float-right mr-5 my-4") create new genre
    .row
        each item in genre
            .col-12.col-md-6.col-lg-3.mt-2
                -console.log(item.name)
                a(href="/api/genre/"+item.name)
                    .card(style='width: 18rem;')
                        img.card-img-top(src='/uploads/'+item.image alt='Card image cap',height="200px")
                        .card-body
                            h5.card-title.text-center=item.name
                        
            
